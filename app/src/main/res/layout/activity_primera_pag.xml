<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FFFFFF"
    tools:context=".PrimeraPag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="83dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="OcasiÃ³n"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="408dp"
            android:layout_height="162dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_casual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_button_selector"
                    android:onClick="onImageButtonClick"
                    app:srcCompat="@mipmap/casual" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CASUAL" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="122dp"
                android:layout_height="162dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_formal"
                    android:layout_width="122dp"
                    android:layout_height="117dp"
                    android:background="@drawable/image_button_selector"
                    android:onClick="onImageButtonClick"
                    app:srcCompat="@mipmap/formal" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FORMAL" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="231dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Clima"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="177dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="164dp"
                android:layout_marginBottom="280dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_soleado"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_button_selector"
                    android:onClick="onImageButtonClick"
                    app:srcCompat="@mipmap/soleado" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOLEADO" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="126dp"
                android:layout_height="164dp"
                android:layout_marginBottom="280dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_nublado"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_button_selector"
                    android:onClick="onImageButtonClick"
                    app:srcCompat="@mipmap/nublado" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NUBLADO" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="164dp"
                android:layout_marginBottom="280dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_lluvioso"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_button_selector"
                    android:onClick="onImageButtonClick"
                    app:srcCompat="@mipmap/lluvioso" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LLUVIOSO" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="149dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_buscar"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="#3685CD"
                android:onClick="buscar"
                android:text="BUSCAR"
                app:icon="@android:drawable/ic_menu_search"
                app:iconGravity="textEnd"
                app:iconTint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
